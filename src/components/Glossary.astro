---
import Callout from './Callout.astro';
---

<section style="margin-top: 1.5rem">
    <Callout type="info">
        <h2>Glossary</h2>
        <dl class="glossary glossary-grid">
            <div>
                <dt>Explicit</dt>
                <dd>Stated clearly, leaving no room for confusion.</dd>
            </div>

            <div>
                <dt>Verbatim</dt>
                <dd>Exactly the same words; word‑for‑word.</dd>
            </div>

            <div>
                <dt>Synthesize</dt>
                <dd>Combine ideas to form a coherent whole.</dd>
            </div>

            <div>
                <dt>Register</dt>
                <dd>Level of formality in language.</dd>
            </div>

            <div>
                <dt>Modifier</dt>
                <dd>Word/phrase describing another element.</dd>
            </div>

            <div>
                <dt>Cohesion</dt>
                <dd>Logical connection so ideas flow.</dd>
            </div>

            <div>
                <dt>Thesis</dt>
                <dd>Main argument, stated in introduction.</dd>
            </div>

            <div>
                <dt>Signpost</dt>
                <dd>Phrase signaling paragraph topic.</dd>
            </div>
        </dl>
    </Callout>
</section>
